<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View estate_property View List -->
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">view.estate_property.list</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"></field>
                <field name="expected_price"></field>
                <field name="selling_price"></field>
            </list>
        </field>
    </record>

    <!-- View estate_property form -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">view.estate_property.form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Estate property">
                <header>
                    <button name="action_sold" string="Sold" class="btn-primary" type="object"/>
                    <button name="action_cancel" string="Cancel" type="object"/>
                    

                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                <group>
                    
                    <group>
                        <field name="postcode"></field>
                        <field name="date_availability"></field>
                        <field name="property_tags_id" widget="many2many_tags"></field>
                        <field name="property_type_id"></field>
                    </group>
                         
                    <group>
                        <field name="expected_price"></field>
                        <field name="best_offer"/>
                        <field name="selling_price"></field>
                        <field name="active"></field>                                           
                    </group>
                </group>

                <notebook>
                    <page name="view_description" string="Description">
                        <group>
                            <group>
                                <field name="description"></field>
                                <field name="bedrooms"></field>
                                <field name="living_area"></field>
                                <field name="facades"></field>
                                <field name="state"></field>
                            </group>

                            <group>
                                <field name="garage"></field>
                                <field name="garden"></field>
                                <field name="garden_area"></field>
                                <field name="garden_orientation"></field>
                                <field name="total_area"></field>
                            </group>
                        </group>
                    </page>
                    <page string="Other Info">
                        <group>
                            <group>
                                <field name="buyer_id"></field>
                                <field name="salesperson_id"></field>
                            </group>
                        </group>
                    </page>

                    <page string="Offers">
                        <field name="offer_ids">
                                <list editable="bottom">
                                    <field name="price"/>
                                    <field name="status"/>
                                    <field name="partner_id"/>
                                    <field name="deadline_date"/>
                                    <field name="validity"/>
                                    <button name="action_accept" type="object" icon="fa-check" title="Accept Offer"/>
                                    <button name="action_refuse" type="object" icon="fa-remove" title="Refuse Offer"/>
                                </list>
                            </field>
                        </page>
                </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View estate_property search -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">view.estate_property.search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"></field>
                <field name="postcode"></field>
                <field name="expected_price"></field>
                <field name="bedrooms"></field>
                <field name="living_area"></field>
                <filter string="Available" name="available" domain="[('state', 'in', ['new', 'offer_received'])]"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <group string="Group By">
                    <filter name="postcode" string="Postcode" context="{'group_by': 'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Action estate_property -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate_property</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Add a new Property Advertisement
            </p>
        </field>
    </record>

</odoo>
